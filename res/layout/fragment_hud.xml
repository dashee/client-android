<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/hud_canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/hud_text"
        android:layout_width="600dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
    <View 
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="11" />
        <TextView
            android:id="@+id/hud_text_pitch_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_weight="44"
             />
        
        <TextView
            android:id="@+id/hud_text_roll_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_weight="44" />
            <View 
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="11" />
    </LinearLayout>
    
   <RelativeLayout
        android:id="@+id/hud_power_slider"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal" >

		<ImageView
		    android:id="@+id/power_stick"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:contentDescription="@string/power_joystick_desc" />
		
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/hud_text_right_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_gravity="right|top"
		android:padding="15dp"
        android:orientation="vertical"

        >
    <Button
		    android:id="@+id/dot_settings"
		    android:layout_width="9dp"
		    android:layout_height="29dp"
		    android:layout_gravity="center"
		    android:background="@drawable/options_icon" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/hud_text_right_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="right|bottom"
        android:orientation="vertical"
        >

       <LinearLayout
            android:id="@+id/hud_text_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            >


        </LinearLayout>
        
     <LinearLayout
            android:id="@+id/hud_text_pitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            


        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/hud_text_left_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|bottom"
        android:orientation="vertical"
        >
        
        <LinearLayout
            android:id="@+id/hud_text_ip"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/hud_text_ip_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:typeface="monospace" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/hud_text_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            
            <TextView
                android:id="@+id/hud_text_connection_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:typeface="monospace" />
        </LinearLayout>

      <LinearLayout
            android:id="@+id/hud_text_bps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            

            <TextView
                android:id="@+id/hud_text_bps_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:typeface="monospace" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
